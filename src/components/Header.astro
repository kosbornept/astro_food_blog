---
import {Image} from "astro:assets"
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<header
    class="flex justify-between items-center px-24 py-12 max-sm:px-5 max-sm:py-10 max-w-7xl w-full mx-auto"
>
    <a href="/astro_food_blog/" class="flex items-center gap-x-4">
        <Image 
            src="/astro_food_blog/hangryLogo.png"
            width={60}
            height={60}
            alt="Hangry icon"
            class="rounded-2xl aspect-thumbnail object-cover"
            format="webp"
        />
        <p class="uppercase text-3xl text-zinc-900">Food Blog</p>
    </a>
    <ul class="flex gap-x-8">
        <li><a href="/astro_food_blog/" class={currentPath === "" ? "text-red-700 font-bold hover:text-red-400" : "text-red-500 font-bold hover:text-red-400"}>Home</a></li>
        <li><a href="/astro_food_blog/about" class={currentPath === "about" ? "text-red-700 font-bold hover:text-red-400" : "text-red-500 font-bold hover:text-red-400"}>About</a></li>
        <li><a href="/astro_food_blog/blog" class={currentPath === "blog" ? "text-red-700 font-bold hover:text-red-400" : "text-red-500 font-bold hover:text-red-400"}>Blog</a></li>
    </ul>
</header>