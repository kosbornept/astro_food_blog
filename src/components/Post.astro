---
import { Image } from "astro:assets";
import { getEntryBySlug, type CollectionEntry } from 'astro:content';

type Props = {
    post: CollectionEntry<'posts'>;
};

const { post } = Astro.props;
---

<article>
    <a href={`/blog/${post.slug}`}>
        <Image 
            src={post.data.image}
            width={600}
            height={600 / 1.5}
            alt={post.data.title}
            class="rounded-2xl shadow-xl mb-4 aspect-thumbnail object-cover"
            format="webp"
        />
    </a>
    <a
        href={`/blog/${post.slug}`}
        class="text-4xl text-red-900 font-semibold inline-block hover:text-red-500"
    >
        <h2>{post.data.title}</h2>
    </a>
    <p class="text-red-500 text-2xl line-clamp-2">
        {post.body}
    </p>
</article>